@model TVBroad.Domain.Entities.Broadcasting

@{
    ViewData["Title"] = "Review Broadcast";
}

<h2>Review Broadcast</h2>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Start Time:</strong> @Model.StartTime</p>
    <p><strong>End Time:</strong> @Model.EndTime</p>
</div>

<form asp-action="Review" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <button type="submit" name="decision" value="Approve" class="btn btn-success">Approve</button>
        <button type="submit" name="decision" value="Reject" class="btn btn-danger">Reject</button>
        <a asp-controller="Broadcast" asp-action="ApproveList" class="btn btn-secondary">Cancel</a>
    </div>
</form>
