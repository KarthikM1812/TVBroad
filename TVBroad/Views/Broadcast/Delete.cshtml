@model TVBroad.Domain.Entities.Broadcasting
@{
    ViewData["Title"] = "Delete Broadcast";
}
<h2>Are you sure you want to delete this broadcast?</h2>

<div>
    <h4>@Model.Title</h4>
    <p>From: @Model.StartTime</p>
    <p>To: @Model.EndTime</p>
    <p>Status: @Model.Status</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Broadcast/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
