@model List<TVBroad.Domain.Entities.Broadcasting>
@{
    ViewData["Title"] = "Pending Approvals";
}
<h2>Pending Broadcasts</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start</th>
            <th>End</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.StartTime.ToString("g")</td>
                <td>@item.EndTime.ToString("g")</td>
                <td>
                    <a href="/Broadcast/Review/@item.Id" class="btn btn-sm btn-info">Review</a>
                </td>
            </tr>
        }
    </tbody>
</table>
