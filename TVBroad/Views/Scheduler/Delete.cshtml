@model TVBroad.Domain.Entities.BroadcastSchedule

@{
    ViewData["Title"] = "Delete Broadcast";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Optional custom stylesheet -->


<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-body">
            <h2 class="card-title text-danger mb-4">Are you sure you want to delete this broadcast?</h2>

            <div class="mb-3">
                <h4 class="text-primary">@Model.Title</h4>
                <p><strong>Start:</strong> @Model.StartTime.ToString("f")</p>
                <p><strong>End:</strong> @Model.EndTime.ToString("f")</p>
            </div>

            <form method="post" class="d-flex gap-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>
